# EditorConfig for MantisDB
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go uses tabs (gofmt enforces this)
[*.go]
indent_style = tab
indent_size = 4

# Rust uses tabs (configured in rustfmt.toml)
[*.rs]
indent_style = tab
indent_size = 4

# TypeScript/JavaScript use spaces (JSX alignment)
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 4

# Python uses spaces (PEP 8)
[*.py]
indent_style = space
indent_size = 4

# YAML uses spaces (required by spec)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON uses spaces
[*.json]
indent_style = space
indent_size = 2

# Markdown uses spaces
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 4

# Config files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 2
